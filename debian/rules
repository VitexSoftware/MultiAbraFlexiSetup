#!/usr/bin/make -f
# You must remove unused comment lines for the released package.
#export DH_VERBOSE = 1
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@

#override_dh_auto_install:
#       dh_auto_install -- prefix=/usr

override_dh_install:
	dh_install
	jq '.version = "$(shell dpkg-parsechangelog --show-field Version)"' debian/conf/composer.json | sponge debian/conf/composer.json
	sed -i -e 's/..\/vendor/\/var\/lib\/multi-flexibee-setup/g' debian/multi-flexibee-setup/usr/share/multi-flexibee-setup/init.php
	sed -i -e 's/..\/vendor/\/var\/lib\/multi-flexibee-setup/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/executor.php
	sed -i -e 's/dirname(__DIR__)/"\/usr\/lib\/multi-flexibee-setup\/"/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/executor.php
	sed -i -e 's/dirname(__DIR__)/"\/usr\/lib\/multi-flexibee-setup\/"/g' debian/multi-flexibee-setup/usr/share/multi-flexibee-setup/init.php
	sed -i -e 's/composer\.json/\/usr\/lib\/multi-flexibee-setup\/composer\.json/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/FlexiPeeHP/Ui/PageBottom.php
	sed -i -e 's/js\/jquery.dataTables.js/\/javascript\/jquery-datatables\/jquery.dataTables.js/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/FlexiPeeHP/Ui/DBDataTable.php
	sed -i -e 's/js\/dataTables.bootstrap4.js/\/javascript\/jquery-datatables\/dataTables.bootstrap4.js/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/FlexiPeeHP/Ui/DBDataTable.php
	sed -i -e 's/css\/dataTables.bootstrap4.css/\/javascript\/jquery-datatables\/css\/dataTables.bootstrap4.css/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/FlexiPeeHP/Ui/DBDataTable.php
	sed -i -e 's/.\/vendor/\/var\/lib\/multi-flexibee-setup/g' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/phinx-adapter.php
	sed -i '/prefix =/c\ $$prefix = "\/usr\/lib\/multi-flexibee-setup\/db\/";' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/phinx-adapter.php
	sed -i '/DB_DATABASE/c\ $$sqlOptions["database"] = "\/var\/lib\/dbconfig-common\/sqlite3\/multi-flexibee-setup\/".basename(getenv("DB_DATABASE"));' debian/multi-flexibee-setup/usr/lib/multi-flexibee-setup/phinx-adapter.php
